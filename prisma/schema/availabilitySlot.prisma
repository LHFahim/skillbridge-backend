model AvailabilitySlotEntity {
  id String @id  @default(uuid())

  tutorProfileId String
  tutorProfile   TutorProfileEntity @relation(fields: [tutorProfileId], references: [id], onDelete: Cascade)

  startAt DateTime
  endAt   DateTime
  status  AvailabilityStatusEnum @default(OPEN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  booking   BookingEntity?

  @@map("availabilitySlots")
}

enum AvailabilityStatusEnum {
  OPEN
  BOOKED
}
